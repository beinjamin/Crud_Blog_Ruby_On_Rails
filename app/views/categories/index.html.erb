<h1>Les Categories</h1>

<table class="table table-striped">
<thead>
<tr>
    <td>ID</td>
    <td>NOM</td>
    <td>ACTIONS</td>
</tr>


</thead>
<tbody>
    <% @categories.each do |category| %>
    <tr>
        <td><%= category.id%></td>
        <td><%= category.name%></td>
        <td><%= category.slug%></td>
    </tr>
    <% end %>
</tbody>
</table>

